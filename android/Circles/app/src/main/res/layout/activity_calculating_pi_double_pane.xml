<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="perfectpi.circles.PiInfo"
    android:id="@+id/pi_info_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/field_l"
        android:background="#ff0097a7"
        android:id="@+id/calculating_pi_header_field">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_calculating_pi"
            android:id="@+id/textView5"
            android:textColor="@color/first_header_text"
            android:textSize="@dimen/font_xl"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculating_pi_header_field">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/calculating_pi_header_field"
        android:layout_margin="@dimen/margin_s">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/pi_calculation_intro"
            android:id="@+id/textView12"
            android:textSize="@dimen/font_m" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_s">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_l"
                android:layout_marginLeft="@dimen/margin_l">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:shrinkColumns="1"
                    android:id="@+id/tableLayout2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textView23"
                        android:layout_gravity="right"
                        android:textSize="18sp"
                        android:textColor="@color/actionbar_background" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pi_calculation_part1"
                        android:id="@+id/textView27"
                        android:paddingLeft="10dp"
                        android:textSize="18sp" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/pi_calculation_part2"
                         android:id="@+id/textView39"
                         android:paddingLeft="10dp"
                         android:textSize="18sp"
                         android:layout_marginTop="10dp" />

                     <ImageView
                         android:layout_width="200dp"
                         android:layout_height="75dp"
                         android:id="@+id/imageView3"
                         android:background="@drawable/calculating_pi_formula1"
                         android:layout_below="@+id/textView34"
                         android:layout_centerHorizontal="true"
                         android:layout_gravity="center_horizontal"
                         android:layout_marginTop="10dp" />

                    </LinearLayout>
                </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="1"
                    android:id="@+id/tableLayout"
                    android:layout_below="@+id/tableLayout2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TableRow
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/textView28"
                            android:layout_gravity="right"
                            android:textSize="18sp"
                            android:textColor="@color/actionbar_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_calculation_part3"
                            android:id="@+id/textView31"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:layout_marginBottom="@dimen/margin_l"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TableRow>

                      <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp" >

                      </TableRow>
               </TableLayout>
            </RelativeLayout>

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
                android:layout_marginRight="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pi_calculation_part6"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:id="@+id/textView50"
                    android:layout_below="@+id/imageView4"
                    android:layout_alignLeft="@+id/textView34"
                    android:layout_alignStart="@+id/textView34"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pi_calculation_part5"
                    android:id="@+id/textView34"
                    android:textSize="18sp"
                    android:layout_marginTop="57dp"
                    android:layout_below="@+id/textView32"
                    android:layout_toRightOf="@+id/textView32"
                    android:layout_toEndOf="@+id/textView32"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/textView32"
                    android:layout_gravity="right"
                    android:textSize="18sp"
                    android:textColor="@color/actionbar_background"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="475dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView4"
                    android:background="@drawable/calculating_pi_formula2"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/textView34"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pi_calculation_part4"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:layout_column="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/textView34"
                    android:layout_alignStart="@+id/textView34"/>

            </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </RelativeLayout>
