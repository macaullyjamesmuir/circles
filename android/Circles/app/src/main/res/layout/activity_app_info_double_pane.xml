<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="perfectpi.circles.PiInfo"
    android:id="@+id/pi_info_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/field_l"
        android:background="#ff7e57c2"
        android:orientation="horizontal"
        android:id="@+id/app_info_header_field">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_info_title"
            android:textSize="@dimen/font_xl"
            android:textColor="@color/first_header_text"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/app_info_double_pane_text_view_1" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_info_header_field">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/relative_layout_1"
            android:layout_marginStart="@dimen/margin_s"
            android:layout_marginLeft="@dimen/margin_s"
            android:layout_marginEnd="@dimen/margin_s"
            android:layout_marginRight="@dimen/margin_s"
            android:layout_marginBottom="@dimen/margin_s">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_info_description"
                android:textSize="@dimen/font_m"
                android:id="@+id/app_info_double_pane_text_view_2"
                android:layout_marginTop="@dimen/margin_s"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_s">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_info_students"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/font_l"
                        android:textColor="@color/third_header_text"/>

                    </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_info_smc"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/font_l"
                        android:textColor="@color/third_header_text"/>

                    </RelativeLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/margin_xxl"
                android:layout_marginLeft="@dimen/margin_xxl"
                android:layout_marginEnd="@dimen/margin_xxl"
                android:layout_marginRight="@dimen/margin_xxl">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_s"
                    android:layout_marginLeft="@dimen/margin_s">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/head_project_leader_text_view"
                            android:text="@string/app_info_project_leader"
                            android:textSize="@dimen/font_s"
                            android:textStyle="bold"
                            android:textColor="@color/third_header_text"
                            android:layout_marginBottom="@dimen/margin_xs"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/project_leader_details_text_field"
                            android:text="@string/app_info_randleff_info"
                            android:textSize="@dimen/font_s"
                            android:layout_marginBottom="@dimen/margin_xs"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/head_design_and_gui_text_view"
                            android:text="@string/app_info_guiux"
                            android:textSize="@dimen/font_s"
                            android:textStyle="bold"
                            android:textColor="@color/third_header_text"
                            android:layout_marginBottom="@dimen/margin_xs"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/info_name_PS_text_view"
                            android:text="@string/app_info_schwermer"
                            android:textSize="@dimen/font_s"
                            android:layout_marginBottom="@dimen/margin_xs"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/head_user_testing_text_view"
                            android:text="@string/app_info_user_testing"
                            android:textSize="@dimen/font_s"
                            android:textStyle="bold"
                            android:textColor="@color/third_header_text"
                            android:layout_marginBottom="@dimen/margin_xs"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_AE_text_field"
                            android:text="@string/app_info_evert"
                            android:textSize="@dimen/font_s"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_AM_text_field"
                            android:text="@string/app_info_mattison"
                            android:textSize="@dimen/font_s"
                            android:layout_marginBottom="@dimen/margin_xs"/>

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/head_secretary_text_view"
                            android:text="@string/app_info_secretary"
                            android:textSize="@dimen/font_s"
                            android:textStyle="bold"
                            android:textColor="@color/third_header_text"
                            android:layout_marginBottom="@dimen/margin_xs"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_name_JYI_text_view"
                            android:text="@string/app_info_isse"
                            android:textSize="@dimen/font_s"
                            android:layout_marginBottom="@dimen/margin_xs"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/head_programmers_text_view"
                            android:text="@string/app_info_programmers"
                            android:textSize="@dimen/font_s"
                            android:textStyle="bold"
                            android:textColor="@color/third_header_text"
                            android:layout_marginBottom="@dimen/margin_xs"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_name_AKN_text_view"
                            android:text="@string/app_info_kabata"
                            android:textSize="@dimen/font_s"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_name_CEG_text_view"
                            android:text="@string/app_info_ghouch"
                            android:textSize="@dimen/font_s"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_nameCA_text_view"
                            android:text="@string/app_info_alenskog"
                            android:textSize="@dimen/font_s"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_name_DJ_text_view"
                            android:text="@string/app_info_johansson"
                            android:textSize="@dimen/font_s"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_name_MM_text_view"
                            android:text="@string/app_info_muir"
                            android:textSize="@dimen/font_s"
                            android:layout_marginBottom="@dimen/margin_xs"/>



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/name_sl_text_field"
                        android:text="@string/app_info_linusson"
                        android:textSize="@dimen/font_s"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contact_sl_text_field"
                        android:text="@string/app_info_linusson_info"
                        android:textSize="@dimen/font_s"
                        android:layout_gravity="center_horizontal"/>

                    <ImageView
                        android:layout_width="442dp"
                        android:layout_height="174dp"
                        android:id="@+id/imageView2"
                        android:src="@drawable/smc_logo_grey"
                        android:layout_margin="@dimen/margin_s"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

                </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>