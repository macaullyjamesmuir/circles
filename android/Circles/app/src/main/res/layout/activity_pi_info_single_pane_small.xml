                        android:textSize="@dimen/font_s"
                        android:text="2)"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_s"
                        android:text="@string/pi_fact_2"/>
