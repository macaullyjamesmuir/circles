                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_s"
                android:layout_below="@+id/pi_fact_single_pane_intro_text"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_s"
                android:layout_marginRight="@dimen/margin_s">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_or_maybe_turquoise"
                        android:textSize="@dimen/font_s"
                        android:text="1)"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_s"
                        android:text="@string/pi_fact_1"/>
